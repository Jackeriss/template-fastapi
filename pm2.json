{
    "apps": [{
        "name": "template-fastapi",
        "script": "/bin/bash",
        "args": ["-c", "pipenv run serve"],
        "exec_mode": "fork_mode",
        "instances": "1",
        "autorestart": false,
        "log_file": "/app/log/template-fastapi/template-fastapi.log",
        "time": true,
        "merge_logs": true,
        "increment_var": "PORT",
        "env": {
            "ENV": "prod",
            "PORT": 8000
        }
    }]
}
